mixin item(figureClass, imgSrc, title, description, actions)
    section.item
        .item__figure(class=figureClass)
            img.item__image(src=imgSrc, alt="Item")
            .item__figcaption
                h2.item__title!= title
                .item__description
                    if description
                        span= description

                    if actions
                        button.button.button--secondary(type="button", data-toggle="modal", data-target="#modalProject1")
                            | Join
                            +icon-arrow-down('button__arrow-right')
                        +attendance(5, 10)

                unless actions
                    a.item__full-button(href='#', data-toggle="modal", data-target="#modalProject1") View more

